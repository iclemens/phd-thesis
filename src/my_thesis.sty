%
% Functions to reference tables, figures, and equations
%
% Both the text and the object number will be links
% to the actual object.
%

\newcommand{\commonref}[3]{%
	\IfSubStr{#3}{,}{%
		#2s %
	}{%
		\hyperref[#3]{#2 }%
	}%
	\def\nextitem{\def\nextitem{#1}}%
	\@for \el:=#3\do{\nextitem\ref{\el}}%
}

\newcommand{\figref}[2][ and ]{\commonref{#1}{Figure}{#2}}
\newcommand{\panelref}[2]{\figref{#1}\hyperref[#1]{#2}}

\newcommand{\tabref}[2][ and ]{\commonref{#1}{Table}{#2}}
\newcommand{\eqnref}[2][ and ]{\commonref{#1}{Equation}{#2}}

\newcommand{\Chapter}[2][ and ]{\commonref{#1}{Chapter}{#2}}
